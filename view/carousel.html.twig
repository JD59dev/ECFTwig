<!-- Carousel Start -->

<div class="align-items-center">
	<div id="carouselExample" class="carousel slide">
		<div class="carousel-inner">
			{% set newList = [] %}
			{% for film in listFilm %}
				{% if film.getId not in newList %}
					<div class="carousel-item {{ loop.first ? 'active' : '' }}">
						<div class="d-flex align-items-center justify-content-around">
							<ul class="list-unstyled">
								<li>
									<h1 class="mb-3 animated slideInDown">
										{{film.getId}}
										-
										{{ film.getTitre }}</h1>
								</li>
								<li>
									Réalisé en
									{{film.getAnnee}}
									par
									{{film.getRealisateur}}
								</li>
								{% for role in film.getRoles() %}

									<li>avec
										{{ role.getActeur.getPrenom }}
										{{ role.getActeur.getNom }}
										dans le rôle de
										{{ role.getPersonnage }}</li>
								{% endfor %}
							</ul>
							{# ici on doit aller adans un objet qui est déja sdans un autre. Il faut faire un for each de chaque occurence et aller utiliser le getter 
																																			de l'objet avant d'aller chercher le getter des infos dans ce dit objet. donc on peux faire des choses comme cela {{ role.getActeur().getNom() }}#}
							<img src="{{film.getAffiche}}" class="w-25" alt="{{film.getTitre}}">
						</div>
						{% set newList = newList|merge([film.getId]) %}
					</div>

				{% endif %}

			{% endfor %}

		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

</div>
<!-- Carousel End -->
