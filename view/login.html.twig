<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<h1>Connexion</h1>

			<form action="login" method="POST">

				<div class="form-group">
					<label for="userLogin">E-mail</label>
					<input type="email" class="form-control bg-light" name="userLogin" id="userLogin" placeholder="E-mail" required>
					<small class="form-text text-muted">
						<em>Please provide your email</em>
					</small>
				</div>

				<div class="form-group">
					<label for="userPassword">Mot de passe</label>
					<input type="password" class="form-control bg-light" name="userPassword" id="userPassword" placeholder="Mot de passe" required>
					<small class="form-text text-muted">
						<em>Password should be at least 8 characters, a number and a special character</em>
					</small>
				</div>

				<div class="d-flex justify-content-center">
					<button type="submit" name="submit" class="btn btn-success mt-4">Login</button>
				</div>
			</form>
		</div>
	</div>
</div>
{{message}}
